extends ./layout

block content
  div(ng-controller="StoryTime" ng-init="posts = #{JSON.stringify(posts)}")
    div.article(ng-repeat="post in posts")
      //- div.picture(style="background:url('"background"')")
      div.picture(style="background:url('/images/wood.jpg')")
      div.words
        h2 {{post.title}}
        h3 {{post.author}}
        div(markdown="post.body")

block head
  script(src='/javascripts/posts/story.js')  